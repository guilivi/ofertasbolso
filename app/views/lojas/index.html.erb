<h1>Listing lojas</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lojas.each do |loja| %>
      <tr>
        <td><%= loja.description %></td>
        <td><%= link_to 'Show', loja %></td>
        <td><%= link_to 'Edit', edit_loja_path(loja) %></td>
        <td><%= link_to 'Destroy', loja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loja', new_loja_path %>
